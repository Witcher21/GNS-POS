{
  "name": "gns-pos",
  "version": "2.0.0",
  "description": "GNS POS - Next-Gen Enterprise POS for Sri Lankan Supermarkets",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"node -e \\\"setTimeout(()=>require('child_process').spawn('electron',['.','--dev'],{shell:true,stdio:'inherit'}),3000)\\\"\"",
    "vite": "vite",
    "electron": "electron . --dev",
    "build": "vite build",
    "start": "electron .",
    "rebuild-sqlite": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "csv-parser": "^3.0.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.21",
    "vue-i18n": "^9.10.2",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "28.2.4",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  }
}